<footer id="footer">
  <div class="outer">
    <div id="footer-info">
      <div class="footer-left">
        &copy;
        <%= date(new Date(), 'YYYY') %>
        <%= config.author || config.title %>
        <br>
        <a href="http://www.miibeian.gov.cn/" target="_blank" rel="nofollow">
          <%= config.beian ? config.beian : "" %>
        </a>
      </div>
      <div class="footer-right">
        <a href="https://hexo.io/" target="_blank">Hexo</a> Theme <a href="https://github.com/litten/hexo-theme-yilia" target="_blank">Yilia</a> by Litten
        <br>
        <% if (config.upyun_imgurl) { %>
        <a target="_blank" href="https://www.upyun.com" rel="external nofollow noopener noreferrer">
          <img src="<%= config.upyun_imgurl %>" width="60">
        </a>
        提供CDN加速
        <% } %>
      </div>
    </div>
    <style>
      body #footer {
        font-size: 14px;
        font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
      }

      @media (max-width: 800px) {
        #footer .footer-left {
          margin: 0px;
        }

        #footer .footer-right {
          margin-bottom: 10px;
        }
      }

      @media (min-width: 801px) {
        #footer .footer-left {
          text-align: left;
        }

        #footer .footer-right {
          text-align: right;
        }
      }
    </style>

</footer>